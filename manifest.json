{

  "manifest_version": 3,
  "name": "Canvas GroupView",
  "version": "1.0",

  "description": "Visually indicates group assignments and discussions. Currently only functions on the Assignments and Discussion pages.",

  "icons": {
    "128": "images/turtle-128.png",
    "48": "images/turtle-48.png",
    "32": "images/turtle-32.png",
    "16": "images/turtle-16.png"
  },

  "content_scripts": [
    {
      "matches": ["*://asu.instructure.com/courses/*"],
      "js": ["scripts/assignments.js","scripts/discussions.js"]
    }
  ]

}